@model InventoryManagement.Models.StockLog
@{
    ViewData["Title"] = "Registrar Stock";
}

<h2>Registrar Movimiento de Stock</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="ProductoId">Producto</label>
        <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
    </div>
    <div class="form-group">
        <label for="Cantidad">Cantidad</label>
        <input type="number" asp-for="Cantidad" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>

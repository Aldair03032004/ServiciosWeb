@model IEnumerable<InventoryManagement.Models.Producto>

<h1> Productos</h1>

<p>
    <a asp-action="Create" link="Create">Crear Nuevo Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Categoria.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-action="Index">Agregar Nuevo Producto</a>
<br />
<a asp-controller="Categoria" asp-action="Index">Ver Categorías</a>
<br />
<a asp-controller="Home" asp-action="Stock">Ver Stock</a>
<br />
<a asp-controller="Home" asp-action="Categoria">Ver Categorías</a>
